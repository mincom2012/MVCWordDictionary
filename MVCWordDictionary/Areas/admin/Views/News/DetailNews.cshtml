@model MVCWordDictionary.Models.News

@{
    ViewBag.Title = "Detail News";
    var comment = Model.Comment.FirstOrDefault();
    if (comment == null)
    {
        comment = new MVCWordDictionary.Models.Comment();
    }
}

<div id="box_details_news" class="col-md-8">
    <div class="block_timer">
        <span class="txt_666">
            @CommonHelper.DisplayBlockTimmer(Model.ModifiedDate.Value)
        </span>
    </div>

    <div>
        <h2>
            @Html.DisplayFor(item => item.Title)
        </h2>
    </div>


    <div>
        <h4>
            @Html.DisplayFor(item => item.Description)
        </h4>
    </div>

    <div>
        @Html.Raw(Model.Contents)
    </div>

    <div style="text-align:right">
        <strong>
            @Html.DisplayFor(item => item.Author)
        </strong>
    </div>
    <div class="clear"></div>

    <div class="form-horizontal">
        <h1></h1>
        @Html.Partial("~/Views/Shared/Comment.cshtml", comment)
    </div>

</div>

