@model IEnumerable<MVCWordDictionary.Models.Comment>

@foreach ( var item in Model )
{
    <li id="list-comment" class="list-group-item" onmouseover="CommentMouseOver();" style="position:relative">
        <div class="bs-example" data-example-id="media-alignment">
            <div class="media">
                <a href="#" class="media-left">
                    <img alt="64x64" data-src="holder.js/64x64" style="width: 64px; height: 64px;" src="data:image/svg+xml;base64," data-holder-rendered="true">
                </a>
                <div class="media-body">
                    <h4 class="media-heading">Comment as Guest</h4>
                    <span>@item.Contents</span>
                </div>
            </div>
        </div>
        <div style=" color: red; font-weight: lighter; position: absolute; right: 5px" class="glyphicon glyphicon-remove"></div>
    </li>
}

<script type="text/javascript">
    function CommentMouseOver() {

    }
</script>
