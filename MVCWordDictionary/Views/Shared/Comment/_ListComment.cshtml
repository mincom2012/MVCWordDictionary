@model IEnumerable<MVCWordDictionary.Models.Comment>


@foreach (var item in Model)
{
    <li class="list-group-item" onmouseover="comment_mouseover(this);" onmouseout="comment_mouseout(this);" style="position:relative">
        <div id="@item.CommentID" class="glyphicon glyphicon-remove delete-comment item-hidden" title="Delete comment"></div>
        <div class="bs-example" data-example-id="media-alignment">
            <div class="media">
                <a href="#" class="media-left">
                    <img alt="64x64" data-src="holder.js/64x64" style="width: 64px; height: 64px;" src="data:image/svg+xml;base64," data-holder-rendered="true">
                </a>
                <div class="media-body">
                    <h5 class="media-heading">Comment as Guest</h5>
                    <div>
                        <strong>  @item.Contents</strong>
                    </div>
                    <div>
                        <small>
                            @item.ModifiedDate.Value.ToString("dd/MM/yyyy hh:mm:ss")
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </li>
}




<script type="text/javascript">

    function comment_mouseover(sender) {
        $(sender).find('.delete-comment').removeClass('item-hidden');
        $(sender).find('.delete-comment').addClass('item-visibility');

    }

    function comment_mouseout(sender) {
        $(sender).find('.delete-comment').addClass('item-hidden');
        $(sender).find('.delete-comment').removeClass('item-visibility');
    }

    $('.delete-comment').confirmModal({
        confirmTitle: 'Delete',
        confirmMessage: 'Do you want remove this comment?',
        confirmOk: 'Accept',
        confirmDirection: 'rtl',
        confirmStyle: 'primary',
        confirmCallback: function (target) {
            var commentid = $(target).attr('id');
            var obj = new Object();
            obj.id = commentid;

            $.ajax({
                url: '@Url.Action("DeleteComment", "Comment")',
                type: 'POST',
                contentType: 'application/json charset=utf-8',
                datatype: 'json',
                data: JSON.stringify(obj),
                success: function (data) {
                    $('#' + commentid).parent().remove();
                }
            });
        }
    });

</script>