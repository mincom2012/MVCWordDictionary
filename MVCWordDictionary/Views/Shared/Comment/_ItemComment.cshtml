@model MVCWordDictionary.Models.Comment

<li style="position:relative" onmouseout="comment_mouseout(this);" onmouseover="comment_mouseover(this);" class="list-group-item">
    <div title="Delete comment" class="glyphicon glyphicon-remove delete-comment item-hidden" id="@Model.CommentID"></div>
    <div data-example-id="media-alignment" class="bs-example">
        <div class="media">
            <a class="media-left" href="#">
                <img data-holder-rendered="true" src="data:image/svg+xml;base64," style="width: 64px; height: 64px;" data-src="holder.js/64x64" alt="64x64">
            </a>
            <div class="media-body">
                <h5 class="media-heading">Comment as Guest</h5>
                <div>
                    <strong>  @Model.Contents</strong>
                </div>
                <div>
                    <small>
                        @Model.ModifiedDate.Value.ToString("dd/MM/yyyy hh:mm:ss")

                    </small>
                </div>
            </div>
        </div>
    </div>
</li>