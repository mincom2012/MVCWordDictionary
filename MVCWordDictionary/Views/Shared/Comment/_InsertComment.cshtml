@model MVCWordDictionary.Models.Comment

<li class="list-group-item">
    @using (Ajax.BeginForm("InsertComment", "Comment", new AjaxOptions
    {
        HttpMethod = "Post",
        InsertionMode = InsertionMode.InsertAfter,
        UpdateTargetId = "commentid",
        OnComplete = "clearform",
        OnSuccess="insert_success"
        
    }))
    {
        @Html.HiddenFor(item => item.NewID)
        <div class="form-group">
            <div class="form-group">
                @Html.TextAreaFor(item => item.Contents, new { @class = "form-control", @placeholder = "Input comment..." })
            </div>
            <div class="form-group">
                <input type="submit" value="Send comment" class="btn btn-primary" />
            </div>
        </div>
    }
</li>

<script type="text/javascript">

    function clearform() {
        alert('Comment send success. Thank you very much!');
        $("#Contents").val('');
    }

    function insert_success() {
        alert($("#commentid .list-group-item:last").html());
    }

</script>


